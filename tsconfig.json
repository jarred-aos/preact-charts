{
    "compilerOptions": {
      "outDir": "./dist",
      "target": "es2017",
      "lib": [
        "dom",
        "esnext",
        "esnext.array"
      ],
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "strictPropertyInitialization": false,
      "strictNullChecks": false,
      "removeComments": false,
      "sourceMap": true,
      "jsx": "react",
      "jsxFactory": "h",
      "experimentalDecorators": true,
      "declaration": true,
      "allowSyntheticDefaultImports": true,
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ]
}
