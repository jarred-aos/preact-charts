{
  "name": "preact-charts",
  "version": "0.6.2",
  "description": "Charting library built using preact with some small d3 dependencies",
  "main": "dist/index.js",
  "source": "src/index.ts",
  "files": [
    "package.json",
    "README.md",
    "dist",
    "src",
    "LICENSE"
  ],
  "scripts": {
    "test": "npm run check-build",
    "check-build": "tsc && npm run size-check",
    "clean-dist": "rm -rf dist",
    "build": "npm run clean-dist && tsc",
    "dev": "tsc -w",
    "size-check": "npx bundlesize",
    "smart-publish": "npm run build && git commit -am %npm_package_version% && git tag %npm_package_version% && git push && git push --tags && npm publish"
  },
  "keywords": [
    "charts",
    "data-vis",
    "preact",
    "d3",
    "component library"
  ],
  "author": "pmkroeker <dev.pmkro@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pmkroeker/preact-charts.git"
  },
  "bugs": {
    "url": "https://github.com/pmkroeker/preact-charts/issues"
  },
  "dependencies": {
    "d3-array": "^2.0.3",
    "d3-axis": "^1.0.12",
    "d3-brush": "^1.0.6",
    "d3-scale": "^2.2.2",
    "d3-selection": "^1.4.0",
    "d3-shape": "^1.3.4",
    "goober": "^1.2.2"
  },
  "peerDependencies": {
    "preact": "^8.4.2",
    "@types/d3": "^5.7.1"
  },
  "devDependencies": {
    "@types/d3": "^5.7.1",
    "@typescript-eslint/eslint-plugin": "^1.5.0",
    "@typescript-eslint/parser": "^1.5.0",
    "csstype": "^2.6.3",
    "eslint": "^5.15.3",
    "eslint-plugin-react": "^7.12.4",
    "preact": "^8.4.2",
    "typescript": "^3.3.3"
  },
  "bundlesize": [
    {
      "path": "./dist/*.*js",
      "maxSize": "40KB"
    }
  ]
}
